{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": "echo 'logging bash usage'", "timeout": 30 }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          { "type": "command", "command": "echo 'logging file write'", "timeout": 30 }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          { "type": "prompt", "prompt": "Summarize the work done in this session $ARGUMENTS", "timeout": 30 }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          { "type": "agent", "prompt": "Review the subagent output $ARGUMENTS", "timeout": 30 }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          { "type": "command", "command": "echo 'session started'", "timeout": 30 }
        ]
      }
    ]
  }
}
